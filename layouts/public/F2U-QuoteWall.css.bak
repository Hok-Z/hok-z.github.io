.QuoteContainer::after {
    content: "Code by Hok-Z #170947";
    font-size: 10px;
    margin-top: -50px !important;
    display: block;
    float: right;
    color: #07070736;
    pointer-events: all;
}

.QuoteWall {
    background: #00000000;
    border-radius: 2px !important;
    border: 2px solid #00000082;
    height: 200px;
    overflow: auto;
    margin-bottom: 50px;
}

.QuoteHeader {
    padding-top: 10px;
    color: #000000 !important;
    background: #00000038;
    height: 40px !important;
    border-bottom: 1px solid black;
    font-weight: 900;
}

.QuoteEntry {
    border-bottom: 1px solid #00000069;
    padding: 5px;
    color: white;
    height: 70px;
}

.QuoteEntry:nth-child(even) {
    background: #0000001a;
}

p.username {
    color: #000000 !important;
    display: flex;
}

p.quote {
    color: #000000bf;
    font-style: italic; 
    float: left;
}

p.text-muted {
    color: #313131 !important;
    float: right;
    font-size: 10px;
    margin-top: 4px;
}

.QuoteWall::-webkit-scrollbar,
.QuoteWall::-webkit-scrollbar-track,
.QuoteWall::-webkit-scrollbar-thumb {
    background: #6b6b6b57 !important;
    border: none !important;
    width: 5px !important;
}
